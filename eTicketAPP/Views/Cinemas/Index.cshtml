@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "List Of Cinema";
}
<h1>Welcome to Producer View </h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <div class="row">
                                <div class="col-md-4">
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pencil-alt"></i>Edit</a>
                                </div>
                                <div class="col-md-4">
                                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info"></i>Details</a>
                                </div>
                                <div class="col-md-4">
                                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i>Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<div style="position:fixed;right:25px;bottom:25px;" class="text-white">
    <a asp-action="Create" class="btn btn-outline-success"><i class="fas fa-plus-circle"></i>Add New</a>
</div>